<p id="notice">
	<%= notice %>
</p>
<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
	<%= render 'layouts/error_messages', model: f.object %>
	<div class="form">
		<label>Title</label><br>
		<%= f.text_field :title %>
	</div>
	<div class="form">
		<label>Body</label><br>
		<%= f.text_area :body %>
	</div>
	<div class="update">
		<%= f.submit ' Update Book ' %>
	</div>
<% end %>
 <%= link_to "Show" ,book_path(@book) %> | <a href="/books">Back</a>